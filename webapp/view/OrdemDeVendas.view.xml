<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.h12f10161-us_3.dashboardTabelas.controller.OrdemDeVendas" xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Page showHeader="true" title="Ordem de Vendas" showFooter="true" showNavButton="true" navButtonPress="_onPageNavButtonPress">
		<content>
			<ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
				<Table width="auto" noDataText="No data" mode="None"  showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true"
					class="sapUiResponsiveMargin" itemPress="_onTableItemPress" items="{path:'/ZFI_DASHBOARD_ORDEM_VENDA', templateShareable:true}">
					<infoToolbar>
						<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
							<content>
								<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</content>
						</Toolbar>
					</infoToolbar>
					<headerToolbar>
						<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
							<content>
								<ToolbarSpacer width=""/>
								<OverflowToolbarButton text="Filter" type="Transparent" icon="sap-icon://filter" iconFirst="true" width="auto" enabled="true" visible="true"
									iconDensityAware="false"/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Phone" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Aprovação" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Pedido" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="ATV" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Status" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Cliente" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Nome" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Modalidade" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Emissão" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Remessa" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Faturamento" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Item" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Total Pedido" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Valor a Faturar" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
							<Column width="auto" hAlign="Center" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline"
							mergeDuplicates="false">
							<header>
								<Text text="Obs" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Active">
							<cells>
								<ComboBox selectedKey="" editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%"
									selectionChange="_onComboBoxSelectionChange">
									<items>
										<core:Item text="Aprovado" enabled="true" key="Aprovado"/>
										<core:Item text="Reprovado" enabled="true" key="Reprovado"/>
									</items>
								</ComboBox>
								<Text text="{Pedido}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								<ObjectNumber number="{ATV}" unit="" emphasized="true" state="None"/>
								<Text text="{Status}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
							    <Text text="{Cliente}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								<Text text="{Nome}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								<Text text="{Modalidade}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								<Text text="{Emissao}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								<DatePicker value="{path: 'Dt_Remessa'}" width="auto" visible="true" valueFormat="yyyyMMdd"/>
								<DatePicker value="{path: 'Dt_faturamento'}" width="auto" visible="true" valueFormat="yyyyMMdd"/>
								<Text text="{Item}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								<ObjectNumber number="{path: 'V_Liq', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}" unit="" emphasized="true"
									state="None"/>
								<ObjectNumber number="{path: 'V_Imposto', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}" unit=""
									emphasized="true" state="None"/>
								<Input id="inp_obs" maxLength="255"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</content>
		<footer/>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>